@page
@model LoginModel

<head>
    <script><link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous"></script>    
    <link rel="icon" href="~/imagenes/iniciar-sesion.png">
    <title>¡Bienvenido de nuevo! | Funko Adiction </title>
</head>

<style>    
    #ver{
        position: fixed !important;
        left: 0px !important;
        top: 0px !important;
    }
    #tre{
       position: fixed !important;
        right: 0px !important;
        top: 55px !important; 
        background-color: #DEDEDE; 
        width:50% !important;
        height:100% !important;   
            
    }
  #toi{        
       
        top: 25% !important; 
        left: 40% !important;
        display:flex !important;
        position:absolute !important; 
        
       
    }
  
</style>
    
<body>

    <section>
        <img src="https://images.unsplash.com/photo-1574888496063-41f66afde626?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=436&q=80" alt="" width="50%" height="100%" id="ver">
    </section>
    <section >  
        <div id="tre">
            <div id="toi">       
        <form id="account" method="post">
            <h2>Bienvenido otra vez. 🌟 </h2>
            <hr/> 
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"  />
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <br>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                <label asp-for="Input.Password" class="form-label"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <div class="checkbox">
                    <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar Sesion</button>
            </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">No tienes cuenta? Registrate</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
            </div>
            </div> 
        </section>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
