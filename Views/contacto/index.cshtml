@model Funko.Models.Contacto

@{
    ViewData["Title"] = "";
}
<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <h2 class="display-4">Soporte al Cliente</h2>

    <form asp-controller="Contacto" asp-action="Create">
        <label asp-for="name" class="form-label">Nombre</label>
        <input asp-for="name" class="form-control form-control-sm" type="text" placeholder="Escribe un Nombre" aria-label=".form-control-sm" />

        <label asp-for="email" class="control-label">Correo</label>
        <input asp-for="email" class="form-control" placeholder="Escribe tu Correo"/>

        <label asp-for="numero" class="control-label">Numero</label>
        <input asp-for="numero" class="form-control" Placeholder="Escribe tu Numero"/>

        <label asp-for="subject" class="control-label">Asunto</label>
        <input asp-for="subject" class="form-control" Placeholder="Escribe tu Asunto"/>

        <label asp-for="comment" class="control-label">Comentario</label>
        <input asp-for="comment" class="form-control" Placeholder="Escribe tu Comentario"/>

    
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Enviar</button> 
        </div>              
    </form>
    <h1>@ViewData["Message"]</h1>
    <div>
        <a asp-area="" asp-controller="Home" asp-action="Index">Regresar al inicio</a>
    </div>
</div>
